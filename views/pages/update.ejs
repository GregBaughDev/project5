<%- include('./partials/head') %>
<%- include('./partials/header') %>
<div class='container w-75 center-div'>
    <div class='container w-20 border p-5'>
        <h2 class='text-center'>Update your password</h2>
        <form action="/email/update/<%=id%>/passwordchange" method="POST">
            <section class="form-group my-2">
                <label for="newpassword">Enter a new password</label>
                <input class='form-control' type="password" name="newpassword" id="newpassword" required>
            </section>
            <section class="form-group my-2">
                <label for="confirmpassword">Enter a new password</label>
                <input class='form-control' type="password" name="confirmpassword" id="confirmpassword" required>
            </section>
            <aside class="my-3">
                    <ul>
                        <li>Password must be at least 8 characters</li>
                        <li>Must contain at least 1 uppercase letter</li>
                        <li>Must contain at least 1 lowercase letter</li>
                        <li>Must contain at least 1 number</li>
                        <li>It may contain special characters</li>
                    </ul>
                </aside>
            <section class="form-group my-3 d-flex justify-content-center">
                <button class="btn btn-style">Submit</button>
            </section>
        </form>
    </div>
</div>
<%- include('./partials/footer') %>