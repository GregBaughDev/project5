  <%- include('./partials/head') %>
  <%- include('./partials/header') %>
    <main class="main">
<div class="container w-75 center-div">
    <div class="container w-20 border p-5">
        <% if(errors) { %>
            <div class="alert alert-danger" role="alert">
                <div class="container">
                    <%= errors.userExists %>
                </div>
            </div>
        <% } %>
        <h2 class="text-center">Sign Up</h2>
        <form action="/signup" method="POST">
            <div class="form-group my-3">
                <label for="email">Email Address</label>
                <input class="form-control" type="email" name="email" id="email" required>
                <% if(errors) { %>
                <div class="alert alert-danger" role="alert">
                    <div class="container">
                        <%= errors.email %>
                    </div>
                </div>
                <% } %>
            </div>
            <div class="form-group my-3">
                <label for="pword">Enter Password</label>
                <input class="form-control" type="password" name="pword" id="pword" required>
                <% if(errors) { %>
                <div class="alert alert-danger" role="alert">
                    <div class="container">
                        <%= errors.password %>
                    </div>
                </div>
                <% } %>
            </div>
            <div class="form-group my-3">
                <label for="pwordcheck">Re-enter Password</label>
                <input class="form-control" type="password" name="pwordcheck" id="pwordcheck" required>
                <% if(errors) { %>
                <div class="alert alert-danger" role="alert">
                    <div class="container">
                        <%= errors.passwordMatch %>
                    </div>
                </div>
                <% } %>
                <aside class="my-3">
                    <ul>
                        <li>Password must be at least 8 characters</li>
                        <li>Must contain at least 1 uppercase letter</li>
                        <li>Must contain at least 1 lowercase letter</li>
                        <li>Must contain at least 1 number</li>
                        <li>It may contain special characters</li>
                    </ul>
                </aside>
            </div>
            <div class="form-group my-3 d-flex justify-content-center">
                <button class="btn btn-style" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
</main>
<%- include('./partials/footer') %>
