  <%- include('./partials/head') %>
  <%- include('./partials/header') %>
    <main class="main">
      <div class='container w-75 center-div'>
        <div class='container w-20 border p-5'>
          <h2 class='text-center'>Please Log In</h2>
          <form action="/login" method="POST">
            <div class="form-group my-2">
              <label for="email">E-Mail:</label>
              <input type="email" name="email" id="email" required class='form-control' placeholder=" " autocomplete="username">
            </div>
      
            <div class="form-group my-2">
              <label for="password">Password:</label>
              <input type="password" name="password" id="password" required class='form-control' placeholder=" ">
              <small id='passwordHelp' class='form-text text-muted'>Forgot password? <a href="/reset">Reset</a></small>
            </div>
      
            <div class="form-check my-2">
              <input type='checkbox' name="remember" id="remember" class='form-check-input' />
              <label class='form-check-label' for='remember'>Stay Logged in</label>
            </div>
      
      
            <div class="form-group my-3 d-flex justify-content-center">
              <button class="btn btn-style" id="signin">Sign in</button>
            </div>
          </form>
          <div>
            <p class="my-2 text-center">Not yet a user?  <a href="/auth/signup">Sign up</a></p>
          </div>
        </div>
      </div>
      
    </main>
<%- include('./partials/footer') %>
