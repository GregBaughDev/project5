  <%- include('./partials/head') %>
  <%- include('./partials/header') %>
    <main class="main">
      <div class ="hero text-center">
      <h1 class="mt-5 display-1">JQuery + TMDB API</h1>
      <h2 id="page-title" class="mt-5">Now Playing:</h2>
    </div>
      <!-- Main Content -->
      <div id="api-content"></div>
      <!-- Pagination controls -->
      <a id="prev-page"  class="carousel-control-prev prev-page" title="Arrow keys also change pages" role="button" >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a id="next-page" class="carousel-control-next next-page" title="Arrow keys also change pages" role="button">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </main>
    <nav class="navbar search bg-light">
      <div class="navbar-brand">
        <label for="genre" class="sr-only">Select a genre</label>
          <select name="genre" class="form-select text-center" id="genre">
              <option>--Select a genre--</option>
              <% for(let genre in genres) { %>
              <option><%= genre %></option>
          <% } %>
          </select>
      </div>
      <div class="nav-link">
        <input type="search" class="form-control rounded text-center" placeholder="Search" aria-label="Search"
        aria-describedby="search-addon" />
      </div>
    </nav>
<%- include('./partials/footer') %>
